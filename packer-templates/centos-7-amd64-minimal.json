{
  "variables": {
    "iso_checksum": "99d305fa40ec9e28ef8450c3bcc45f85",
    "iso_checksum_type": "md5",
    "iso_url": "http://centos.bhs.mirrors.ovh.net/ftp.centos.org/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1511.iso",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "vm_name": "centos-7-amd64-minimal"
  },
  "builders": [
    {
      "type": "qemu",
      "accelerator": "kvm",
      "boot_command": [
        "<tab><wait>",
        "text <wait>",
        "ks=http://{{.HTTPIP}}:{{.HTTPPort}}/{{.Name}}.cfg <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "communicator": "ssh",
      "disk_size": "8192",
      "headless": false,
      "http_directory": "preseed",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "qemuargs": [
        [ "-smp", "2" ],
        [ "-m", "1024M" ]
      ],
      "shutdown_command": "sudo /sbin/halt -p",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_port": "22",
      "ssh_pty" : "true",
      "ssh_wait_timeout": "2h",
      "vm_name": "{{user `vm_name`}}"
    },
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab><wait>",
        "text <wait>",
        "ks=http://{{.HTTPIP}}:{{.HTTPPort}}/{{.Name}}.cfg <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "communicator": "ssh",
      "disk_size": "8192",
      "guest_additions_mode": "disable",
      "guest_os_type": "RedHat_64",
      "hard_drive_interface": "sata",
      "headless": false,
      "http_directory": "preseed",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "shutdown_command": "sudo /sbin/halt -p",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_port": "22",
      "ssh_pty" : "true",
      "ssh_wait_timeout": "2h",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--cpus", "2"],
        ["modifyvm", "{{.Name}}", "--memory", "1024"]
      ],
      "vm_name": "{{user `vm_name`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo '{{user `ssh_password`}}' | sudo -S sh '{{.Path}}'",
      "scripts": [
        "scripts/upgrade.sh",
        "scripts/grub.sh",
        "scripts/network.sh",
        "scripts/ssh.sh",
        "scripts/systemd.sh",
        "scripts/users.sh",
        "scripts/cleanup.sh",
        "scripts/minimize.sh"
      ],
      "pause_before": "5s"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "vagrant-boxes/{{user `vm_name`}}-{{.Provider}}.box",
      "vagrantfile_template": "vagrant/vagrantfile-linux.tpl"
    }
  ]
}
